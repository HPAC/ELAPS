# double precision complex Hermitian generalized eigensolver (expert version)
Signature(
    "zhegvx",
    Flag("itype", [1, 2, 3]),
    Flag("jobz", ["V", "N"]),
    Flag("range", ["A", "V", "I"]),
    Uplo(),
    Dim("n"),
    zData("A", "ldA * n", "symm, lower if uplo == 'L' else upper"),
    Ld("ldA", "n"),
    zData("B", "ldB * n", "symm, lower if uplo == 'L' else upper"),
    Ld("ldB", "n"),
    dScalar("vl"),
    dScalar("vu"),
    iScalar("il"),
    iScalar("iu"),
    sScalar("abstol"),
    iScalar("m"),
    sData("W", "n"),
    zData("Z", "ldZ * n"),  # actually: ldZ * m
    Ld("ldZ", "n if jobz == 'V' else 1"),
    zWork("Work", "lWork"),
    Lwork("lWork", "2 * n"),
    dWork("rWork", "7 * n"),
    iWork("iWork", "5 * n"),
    iData("iFail", "n"),
    Info()
)
